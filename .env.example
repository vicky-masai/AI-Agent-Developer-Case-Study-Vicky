# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_PRIMARY=gpt-4-turbo-preview
OPENAI_MODEL_FALLBACK=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# Database Configuration
DATABASE_URL=sqlite:///database/csrd_extraction.db
DATABASE_ECHO=false

# Vector Store Configuration
VECTOR_STORE_PATH=database/chromadb
EMBEDDING_MODEL=text-embedding-3-small

# Application Settings
LOG_LEVEL=INFO
LOG_FILE=logs/csrd_extraction.log
CACHE_ENABLED=true
CACHE_DIR=data/cache

# Processing Configuration
MAX_WORKERS=4
BATCH_SIZE=5
RETRY_ATTEMPTS=3
RETRY_DELAY=2

# Extraction Settings
CONFIDENCE_THRESHOLD=0.6
MIN_CONTEXT_LENGTH=100
MAX_CONTEXT_LENGTH=4000

# Cost Optimization
ENABLE_CACHING=true
USE_FALLBACK_MODEL=true
MAX_API_COST_USD=100
